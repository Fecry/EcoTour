<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listReservasFav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211E3C06"
    tools:context=".sugerenciasBilletera">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#86A846"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#86A846"
                android:fontFamily="@font/scada"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10sp"
                android:text="@string/BilleteraSugerencias"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#0C0C0C"
                android:textSize="28sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#1E3C06" />

        <ListView
            android:id="@+id/listaBilletera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp">

        </ListView>

        <View
            android:id="@+id/divider18"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#1E3C06" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>